            <!--우측 콘텐츠 영역 -->
            <div class="wrapper wrapper-content">
                <div class="ibox-content m-b-sm border-bottom">

                    <form id="modifyForm" method="post" action="/articles/upddate">

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">제목</label>
                                    <input type="text" id="test" class="form-control" name="title" value="<%=article.title%>">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">내용</label>
                                    <textarea name="contents" id="contents" class="form-control" rows="10" cols="5"><%=article.contents%></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">저장</button>
                            <a href="/articles/list" class="btn btn-info">목록</a>
                        </div>

                    </form>

                </div>
            </div>
            <script>
                // html 요소가 웹브라우저에 모두 렌더링 완료되면 실행되는 메소드 ready()
                $(document).ready(function(){
                    console.log("페이지가 모두 로딩되었습니다.");
                });

                $("#modifyForm").submit(function(){
                    if($("#title").val() == ""){
                        alert("제목을 입력해주세요");
                        $("#title").focus();
                        return false;
                    }

                    if($("#contents").val() == ""){
                        alert("제목을 입력해주세요");
                        $("#contents").focus();
                        return false;
                    }

                    return true;
                });
            </script>